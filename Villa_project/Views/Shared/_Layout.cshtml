<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Villa_project</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.1/css/bootstrap.min.css" crossorigin="anonymous" />

    <!-- Icons & Animations -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- Toastr + DataTables -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.css" crossorigin="anonymous" />
    <link rel="stylesheet" href="//cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />

    <!-- Custom -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Villa_project.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/spinner.css" />

    <style>
        /* Gradient Text */
        .text-gradient {
            background: linear-gradient(45deg, #ff6ec4, #7873f5);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: all .3s ease;
        }

            .text-gradient:hover {
                opacity: 0.8;
                transform: scale(1.05);
            }

        /* Navbar */
        .glass-nav {
            background: rgba(20, 20, 20, 0.8) !important;
            backdrop-filter: blur(12px);
            transition: background 0.4s ease-in-out;
        }

            .glass-nav:hover {
                background: rgba(30, 30, 30, 0.9) !important;
            }

        /* Nav links */
        .nav-hover {
            position: relative;
            transition: all .3s ease-in-out;
        }

            .nav-hover::after {
                content: '';
                position: absolute;
                bottom: -5px;
                left: 0;
                width: 0%;
                height: 2px;
                background: linear-gradient(90deg, #ff6ec4, #7873f5);
                transition: width .3s ease-in-out;
            }

            .nav-hover:hover::after {
                width: 100%;
            }

            .nav-hover:hover {
                transform: translateY(-2px);
                color: #ffb347 !important;
            }

        /* Dropdown */
        .dropdown-menu-dark {
            border-radius: 12px;
            animation: fadeInDown .4s;
        }

        /* Card / Content */
        main {
            animation: fadeInUp .6s;
        }

        /* Footer */
        footer {
            padding: 15px 0;
            font-size: 0.9rem;
            background: linear-gradient(90deg, #141E30, #243B55);
            color: #ddd;
            letter-spacing: .5px;
        }

            footer i {
                color: #ff6ec4;
            }

        /* Spinner overlay */
        .spinner {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 1050;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark glass-nav shadow-lg border-bottom border-secondary animate__animated animate__fadeInDown">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center gap-2 fw-bold text-gradient" asp-controller="Home" asp-action="Index">
                    <img src="~/Images/resort.png" style="width:35px" alt="logo" class="animate__animated animate__zoomIn" />
                    VillaVerse
                </a>

                <!-- Mobile Toggle -->
                <button class="navbar-toggler border-0 shadow-none" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Menu -->
                <div class="collapse navbar-collapse justify-content-end animate__animated animate__fadeIn" id="mainNavbar">
                    <ul class="navbar-nav gap-3 align-items-center">
                        @if (User.IsInRole(SD.Role_Admin))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle nav-hover fw-semibold" href="#" data-bs-toggle="dropdown">
                                    Management
                                </a>
                                <ul class="dropdown-menu dropdown-menu-dark shadow-lg rounded-3">
                                    <li><a class="dropdown-item" asp-controller="Villa" asp-action="Index">Villa</a></li>
                                    <li><a class="dropdown-item" asp-controller="VillaNumber" asp-action="Index">Villa Number</a></li>
                                    <li><a class="dropdown-item" asp-controller="Amenity" asp-action="Index">Amenity</a></li>
                                    <li><a class="dropdown-item" asp-controller="Booking" asp-action="Index" asp-route-status="@SD.StatusApproved">Booking</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" href="#">More Options</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link nav-hover fw-semibold" asp-controller="Booking" asp-action="Index">My Booking</a>
                            </li>
                        }

                        <li class="nav-item"><a class="nav-link nav-hover fw-semibold" asp-controller="About" asp-action="Index">About</a></li>
                        <li class="nav-item"><a class="nav-link nav-hover fw-semibold" asp-controller="About" asp-action="Contact">Contact Us</a></li>
                        <li class="nav-item"><a class="nav-link nav-hover fw-semibold" asp-controller="About" asp-action="Creator">Created By</a></li>

                        <partial name="_LoginPartial" />
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div>
        <main role="main" class="container py-4">
            <div class="loading spinner" style="display:none;"></div>
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="text-center animate__animated animate__fadeInUp">
        Made by <i class="bi bi-emoji-smile"></i> Akshay Kumar
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.1/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
