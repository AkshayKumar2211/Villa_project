@{
    ViewData["Title"] = "About Us";
}

<div class="container-fluid px-5 py-5" style="background: linear-gradient(to right, #0f2027, #203a43, #2c5364); color: #f0f0f0; min-height: 100vh;">
    <div class="text-center mb-5 animate__animated animate__fadeInDown">
        <h1 class="display-3 fw-bold text-gradient">About Our Villas</h1>
        <p class="lead text-muted">Where luxury meets serenity 🌿</p>
        <hr class="w-25 mx-auto border-light">
    </div>

    <div class="row gy-5">
        <!-- Section 1: Our Journey -->
        <div class="col-lg-6 animate__animated animate__fadeInLeft">
            <div class="p-5 rounded-4 shadow-lg" style="background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1);">
                <h2 class="text-warning fw-bold fs-2">🌄 Our Journey</h2>
                <p class="mt-4 fs-5 text-light">
                    From humble beginnings to breathtaking escapes, our villas are crafted to offer unforgettable experiences. Every corner whispers elegance, every view invites peace.
                </p>
            </div>
        </div>

        <!-- Section 2: Our Philosophy -->
        <div class="col-lg-6 animate__animated animate__fadeInRight">
            <div class="p-5 rounded-4 shadow-lg" style="background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1);">
                <h2 class="text-info fw-bold fs-2">🧘 Our Philosophy</h2>
                <p class="mt-4 fs-5 text-light">
                    We believe in slow mornings, golden sunsets, and spaces that breathe. Our design blends nature, comfort, and minimalism—because true luxury is simplicity done well.
                </p>
            </div>
        </div>

        <!-- Section 3: Our Spaces -->
        <div class="col-12 animate__animated animate__fadeInUp">
            <div class="p-5 rounded-4 shadow-lg mt-4" style="background: rgba(255, 255, 255, 0.05); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1);">
                <h2 class="text-success fw-bold fs-2">🏡 Our Spaces</h2>
                <p class="mt-4 fs-5 text-light">
                    Whether you're seeking a romantic hideaway or a family retreat, our villas are tailored to elevate your stay. With curated interiors, ambient lighting, and panoramic views, each space tells its own story.
                </p>
                <div class="d-flex flex-wrap gap-3 mt-4">
                    <span class="badge bg-secondary fs-6 px-3 py-2">Private Pool</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Smart Lighting</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Ocean View</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Minimalist Decor</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Eco-Friendly</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Quote -->
    <div class="text-center mt-5 animate__animated animate__fadeInUp">
        <blockquote class="blockquote text-light fs-4">
            <p class="mb-0 fst-italic">“Luxury is attention to detail, originality, exclusivity and above all quality.”</p>
            <footer class="blockquote-footer text-muted">– Angelo Bonati</footer>
        </blockquote>
    </div>
</div>