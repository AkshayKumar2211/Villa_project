@{
    ViewData["Title"] = "Website Creator";
}

<div class="container-fluid px-5 py-5" style="background: linear-gradient(to right, #0f2027, #203a43, #2c5364); color: #f0f0f0; min-height: 100vh;">
    <div class="text-center mb-5 animate__animated animate__fadeInDown">
        <h1 class="display-3 fw-bold text-gradient">Crafting Digital Experiences</h1>
        <p class="lead text-muted">Where design meets functionality 💡</p>
        <hr class="w-25 mx-auto border-light">
    </div>

    <div class="row gy-5">
        <!-- Section 1: Philosophy -->
        <div class="col-lg-6 animate__animated animate__fadeInLeft">
            <div class="p-5 rounded-4 shadow-lg" style="background: rgba(255,255,255,0.05); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1);">
                <h2 class="text-warning fw-bold fs-2">🎯 My Approach</h2>
                <p class="mt-4 fs-5 text-light">
                    Every website I build is a fusion of clean architecture, responsive design, and intuitive user experience. I believe in scalable systems, pixel-perfect layouts, and code that speaks clarity.
                </p>
            </div>
        </div>

        <!-- Section 2: Technologies -->
        <div class="col-lg-6 animate__animated animate__fadeInRight">
            <div class="p-5 rounded-4 shadow-lg" style="background: rgba(255,255,255,0.05); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1);">
                <h2 class="text-info fw-bold fs-2">🛠️ Technologies I Love</h2>
                <div class="d-flex flex-wrap gap-3 mt-4">
                    <span class="badge bg-secondary fs-6 px-3 py-2">ASP.NET Core</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">EF Core</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Razor Views</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">React</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Angular</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Bootstrap</span>
                    <span class="badge bg-secondary fs-6 px-3 py-2">Stripe API</span>
                </div>
            </div>
        </div>

        <!-- Section 3: Showcase -->
        <div class="col-12 animate__animated animate__fadeInUp">
            <div class="p-5 rounded-4 shadow-lg mt-4" style="background: rgba(255,255,255,0.05); backdrop-filter: blur(12px); border: 1px solid rgba(255,255,255,0.1);">
                <h2 class="text-success fw-bold fs-2">🚀 What I Build</h2>
                <p class="mt-4 fs-5 text-light">
                    From villa booking platforms to secure payment flows, I specialize in full-stack systems that are robust, elegant, and recruiter-ready. My focus is on real-world usability, performance, and polish.
                </p>
                <div class="d-flex flex-wrap gap-3 mt-4">
                    <span class="badge bg-dark fs-6 px-3 py-2">Booking Systems</span>
                    <span class="badge bg-dark fs-6 px-3 py-2">Portfolio Sites</span>
                    <span class="badge bg-dark fs-6 px-3 py-2">Admin Dashboards</span>
                    <span class="badge bg-dark fs-6 px-3 py-2">Responsive UI/UX</span>
                    <span class="badge bg-dark fs-6 px-3 py-2">Secure APIs</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Quote -->
    <div class="text-center mt-5 animate__animated animate__fadeInUp">
        <blockquote class="blockquote text-light fs-4">
            <p class="mb-0 fst-italic">“Design is not just what it looks like and feels like. Design is how it works.”</p>
            <footer class="blockquote-footer text-muted">– Steve Jobs</footer>
        </blockquote>
    </div>
</div>